extends ./layout.jade

block content
  main._contact
    ._page-header: .column.small-12.text-center
      h1(data-t) contact.label
      
    .row: .column.medium-12.medium-centered
      p.text-center.intro(data-t) contact.subtitle
      
    form#contact-form
      .row: label.column.small-11.medium-8.small-centered
        span(data-t) contact.name
        input#name(type="text")
      .row: label.column.small-11.medium-8.small-centered
        span(data-t) contact.email
        input#email(type="email")
      .row: label.column.small-11.medium-8.small-centered
        span(data-t) contact.content
        textarea#message
      .row.text-center
        button#submit.button.info.small.radius(data-t) contact.submit
        
    p#response.text-center
        
  script(src="//www.parsecdn.com/js/parse-1.4.0.min.js")
  script(src="js/emailer.js")
