extends ./layout.jade

block content
  main._top
    .hero
      img(src="img/slogan.svg")
        
    .row: .column.small-12.medium-8.large-6.small-centered
      p.text-center.intro(data-t) mission-statement
        
    .row.news
      h2.head.text-center(data-t) news.label
      .news-list
        each k in ['2016/08/10', '2016/02/22','2015/10/01','2015/06/14','2015/02/21', '2015/02/01', '2014/11/01', '2014/09/30', '2014/08/26']
          .item
            .date #{k}
            .content
              a.link(target="_blank" href-t="news.#{k}.url" data-attr-t)
                span.message(data-t) news.#{k}.head

    .row.media
      h2.head.text-center(data-t) media.label
      .news-list
        each k in ['2016/08/23', '2016/08/17', '2016/08/12', '2016/08/10']
          .item
            .date #{k}
            .content
              a.link(target="_blank" href-t="media.#{k}.url" data-attr-t)
                span.message(data-t) media.#{k}.head
