._services
  .item
    padding 1em 0

  .icon-web, .icon-data
    font-size 1.4em
    margin-right 0.5em
    vertical-align middle
  dl
    padding 0 2em
  img
    border 4px solid white
    box-shadow 0 0 1px rgba(0,0,0,0.5)
  
  ._service
    position relative
    margin-bottom 2em
    .description-box
      display none
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      background-color #222
      opacity 0.8
      color #fff
      font-size 1.1em
      text-align center
      padding 3em 6em
      .title
        margin-bottom 1.2em
        font-size 1.6em
        font-weight bold

      .description
        line-height 1.6
    &:hover
      .description-box
        display block
