global-reset()

html
  font-family: Helvetica, YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;
  min-height:768px
  min-width:840px
  height:100%
  position:relative
  overflow:hidden
  *
    box-sizing:border-box
    transition:all 0.5s ease-in-out

body
  background: url(../img/back.jpg) center center / cover no-repeat fixed

.header, .content
  float:left

.header
  clearfix()
  size: 100% 100%
  .logo
    width:200px
    absolute: top 10% left 10%

  .slogan
    width:30%
    absolute:top 30% left 10%

  .menu
    absolute:bottom 10% left 10%
    .item a
      color:white
      text-decoration:none
      line-height:3rem
      font-size:1.2rem
      transition:all 0.2s
      &:hover
        text-shadow:0 0 1px black, 0 0 10px white, 0 0 10px white

.back, .content
  size:50% 100%
  absolute: top 0 right -10px
  opacity:0
  &.opened
    right: 0
    opacity: 1
    z-index: 1
    > *
      opacity: 1

.back
  background:white

.content
  typography()
  padding:50px 80px 100px
  line-height:30px
  overflow-y:scroll

  &.about
    td
      padding:5px 20px
      border:1px solid white
      &:nth-child(1)
        background: rgba(0,0,0,0.1)
        width:20%
        min-width:120px
      &:nth-child(2)
        background: rgba(0,0,0,0.05)

  &.team
    .member
      clearfix()
      margin: 30px 0
      .picture
        float:left
        size:100px 200px
      .name, .email, .bio
        float:left
        padding:0px 20px
        width:75%
      .name
        bold()
      .email
        font-size:13px

  &.contact
    .field
      field(left,)
      margin:20px 0 0 20px
      input, textarea
        input(, 400px)
      textarea
        height:100px
        resize:vertical
    .button
      width: 440px
      button
        button(#17599a)
        outline:0
        display:block
        margin:20px auto

@media screen and (max-width: 1368px)
  .back, .content
    size:70% 100%

  .header
    &.opened
      .logo
        width: 12%
        absolute:top 10% left 8%
      .slogan
        width:20%
        absolute: top 30% left 5%

@media screen and (max-width: 1024px)
  .header
    .slogan
      width:40%
    &.opened
      .slogan
        width:20%
        absolute: top 30% left 5%

@media screen and (max-height: 740px)
  .menu
    absolute:top 55% left 10%
  .header .menu .item a
    font-size: 1rem
    line-height: 2rem
