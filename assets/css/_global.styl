body
  color #555
  cursor default
  &.en, h1, h2, h3, h4, h5, h6
    font-family 'Lato', sans-serif
  &.ja, h1, h2, h3, h4, h5, h6
    font-family 'YuGothic', sans-serif


._page-header
  background #303C40
  height 16rem
  h1
    color white
    line-height 16rem
    relative top 2rem

p.intro
  font-size 23px
  line-height 38px
  margin 1em 0 0.5em

main
  min-height: calc(100vh - 5em)
  > div
    padding 2em 0
    &:first-child
      padding-top 0
    &:last-child
      padding-bottom 5em

h2.head
  line-height 0
  margin-bottom 1.2em
