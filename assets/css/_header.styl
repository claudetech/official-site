shorten-header()
  background rgba(48, 60, 64, 0.9)
  padding 0.4em 3em
  .logo .img
    height 2.5em

header, header *
  transition all 0.5s

header
  absolute fixed 0
  align-items center
  background rgba(0,0,0,0)
  display flex
  justify-content space-between
  padding 1em 3em
  width 100%
  z-index 10
  .logo
    .img, .text
      height 3em
  ._menu
    margin 0
    font-size 1.2em
    font-weight bold
    li
      display inline-block
      + li
        margin-left 2em
    a.decorated
      color white
      &:before, &:after
        border 1px solid rgba(#fff, 0)
        content " "
        display block
        margin 0 auto
        width 0
        opacity 0
      &:hover:before, &:hover:after
        border-color #fff
        transition all 0.1s ease-out
        width 100%
        opacity 1

    .icon-globe
      color white
      relative top 2px

    ._dropdown
      position relative
      ul
        display none
        background white
        list-style-type none
        border-radius 0.3em
        absolute top 2em right -1em
        box-shadow 4px 4px 5px rgba(0,0,0,0.4)
        &:before
          size 0 0
          border-left 0.5em solid transparent
          border-right 0.5em solid transparent
          border-bottom 0.5em solid white
          content ''
          absolute top -0.5em right 1em
        li
          margin 0
          padding 0
          display block
          + li:last-child
            border-top 1px solid #eee
        a
          display block
          font-size 0.8em
          font-weight normal
          width 90px
          text-align center
          line-height 2.4em
      &:hover ul
        display inline-block
        li:hover a
          color #222

  &.scrolled
    shorten-header()

  .hamburger-icon
    absolute top 10px right 10px
    a
      color white
      font-size 2em
      line-height 0

  @media only screen and (max-width: 60em)
    shorten-header()
    padding 0.2em 1em !important
    ._menu
      font-size 1em
      li + li
        margin-left 1em

  @media only screen and (max-width: 40em)
    ._menu
      display none
      font-size 1.2em
      font-weight normal
      absolute top 54px left 0
      width 100%
      li
        display block
        background rgba(48, 60, 64, 0.9)
        + li
          border-top 1px solid rgba(255,255,255,0.4)
          margin 0
          padding 0.5em 1em
        a.decorated
          display block
          size 100% 100%
          &:before, &:after
            border none
      ._dropdown ul
        opacity 0
